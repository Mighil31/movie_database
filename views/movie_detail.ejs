<%- include header %>

    <div class="content">
        <h1 class=" movie_heading"><%= movie.name %></h1>

        <div class="movie_detail">
            <p><span class="sub-heading">Director</span>: <%= movie.director.name %></p>
            <% var genreString = ""; %>
            <% movie.genre.forEach(function(val, index) { %>
                <% genreString += val.name %>
                <% if(index < movie.genre.length - 1) { %>
                    <% genreString += " ,"; %>
                <% } %> 
            <% }) %>
            <p><span class="sub-heading">Genre</span>: <%= genreString %></p>
            <p><span class="sub-heading">Plot Summary</span>: <%= movie.description %></p>
            <p><span class="sub-heading">Release Year</span>: <%= movie.release %></p>

        </div>
    </div>
    
