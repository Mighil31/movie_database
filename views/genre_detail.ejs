<%- include header %>

    <div class="content">
        <h1>Genre: <%= genre.name %></h1>

        <div class="movie_list">
            <ul>
                <% if (genre_movies.length > 0) { %>
                    <% genre_movies.forEach(function(el) { %>
                        <li style="margin-bottom: 10px"><a href=<%= el.url %> ><%= el.name %></a>
                    <% }) %>
                <% } else { %>
                        <p style="margin-bottom: 10px">No movies in this genre</p>
                <% } %>
                
            </ul>
        </div>
    </div>
    
