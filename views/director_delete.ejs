<%- include header %>

    <div class="content">
        <h1 class="movie_heading"><%= director.first_name %> <%= director.last_name %></h1>

        <div class="movie_detail">
            <% if (director_movies.length > 0) { %>
                <p> Delete these movies before attempting to delete this director</p>
                <h3>Movies:</h3>
                <ul>
                    <% director_movies.forEach(function(movie)  { %>
                        <li class="director_movies"><a href=<%= movie.url %> ><%= movie.name %></a></li>
                    <% }) %>

                </ul>
            <% } else { %>
                    <p> Do you really want to delete this director? </p>
                    <form method='POST' action=''>
                        <input type='hidden' name='directorid' required='true' value=<%= director._id %> >
                        <input type="submit" value="OK" style="display:block">
                    </form>
            <% } %>
        </div>
    </div>
    
    </body>
</html>


